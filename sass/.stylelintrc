{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "color-named": null,
    "max-nesting-depth": 3,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "selector-class-pattern": null,
    "selector-max-compound-selectors": 4,
    "selector-max-id": 1,
    "selector-no-qualifying-type": null
  }
}
